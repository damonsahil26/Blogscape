@model Blogscape.Views.Admin.CreateBlogModel

<h1 class="luckiest-guy-regular text-danger">Create Blog Post</h1>

<form method="post">
    <div class="form-group mt-2">
        <label class="reenie-beanie-regular" asp-for="BlogPost.Title"></label>
        <input asp-for="BlogPost.Title" class="form-control" />
        <span asp-validation-for="BlogPost.Title" class="text-danger"></span>
    </div>

    <div class="form-group mt-2">
        <label class="reenie-beanie-regular" asp-for="BlogPost.Content"></label>
        <textarea asp-for="BlogPost.Content" class="form-control dawning-of-a-new-day-regular" rows="5"></textarea>
        <span asp-validation-for="BlogPost.Content" class="text-danger"></span>
    </div>

    <div class="form-group mt-2">
        <label class="reenie-beanie-regular" asp-for="BlogPost.ImageUrl"></label>
        <input asp-for="BlogPost.ImageUrl" class="form-control dawning-of-a-new-day-regular" rows="5"></input>
    </div>

    <div class="form-group mt-2">
        <label class="reenie-beanie-regular" asp-for="BlogPost.Author"></label>
        <input asp-for="BlogPost.Author" class="form-control" />
        <span asp-validation-for="BlogPost.Author" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-danger mt-4" style="float:right">Submit</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}